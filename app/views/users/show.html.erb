<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.email %><hr>
      <%= @user.created_at.strftime Settings.fomat_date %></br>
      <%= @user.updated_at.strftime Settings.fomat_date %>
    </section>
  </aside>
</div>
